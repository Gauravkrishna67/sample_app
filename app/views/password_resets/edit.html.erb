<% provide(:title, 'Reset password')%>
<h1>Reset password</h1>

<div class="row">
  <div class="col-mid-6 col-md-offset-3">
    <%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <%= hidden_field_tag :email, @user.email%>

    <div class="input-group">
          <span class="input-group-addon glyphicon glyphicon-shopping-cart"></span>
          <%= f.text_field :password, placeholder: "Password", class: "form-control input-lg", label: false, :required =>true %>
        </div><br/>
    <div class="input-group">
          <span class="input-group-addon glyphicon glyphicon-shopping-cart"></span>
          <%= f.text_field :password_confirmation, placeholder: "Password Confirmation", class: "form-control input-lg", label: false, :required =>true %>
        </div><br/>
    <%= f.submit "Update password", class: "btn btn-primary"%>
    <% end %>
  </div>
</div>